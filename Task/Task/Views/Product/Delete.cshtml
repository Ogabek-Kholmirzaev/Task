@model Taskk.Entities.Product

@{
    ViewData["Title"] = "Delete product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Product</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Delete" asp-route-id="@Model.Id">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly="readonly" />
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Delete" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>